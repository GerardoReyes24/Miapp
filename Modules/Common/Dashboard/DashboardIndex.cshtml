@model Miapp2.Common.DashboardPageModel
@{
    ViewData["Title"] = "Inicio";
 
}

@section Head {
@Html.StyleBundle("Pages/Dashboard")
@Html.ScriptBundle("Pages/Dashboard")
}



<!-- Small boxes (Stat box) -->
<div class="row">
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue-active">
            <div class="inner">
                <h3>@Model.OpenOrders</h3>
                <p>Ordenes</p>
            </div>
            <div class="icon">
                <i class="ion ion-bag"></i>
            </div>
            <a href="~/Northwind/Order?shippingState=0" class="small-box-footer">More info <i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue-active">
            <div class="inner">
                <h3>@Model.ClosedOrderPercent<sup style="font-size: 20px">%</sup></h3>
                <p>Ordenes cerradas</p>
            </div>
            <div class="icon">
                <i class="ion ion-stats-bars"></i>
            </div>
            <a href="~/Northwind/Order?shippingState=1" class="small-box-footer">Mas<i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue-active">
            <div class="inner">
                <h3>@Model.CustomerCount</h3>
                <p>Clientes</p>
            </div>
            <div class="icon">
                <i class="ion ion-person-add"></i>
            </div>
            <a href="~/Northwind/Customer" class="small-box-footer">Mas<i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div><!-- ./col -->
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue-active">
            <div class="inner">
                <h3>@Model.ProductCount</h3>
                <p>Productos</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="~/Northwind/Product" class="small-box-footer">Mas<i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue-active">
            <div class="inner">
                <h3>@Model.DesignCount</h3>
                <p>Diseños Registrados</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="~/Northwind/Design" class="small-box-footer">Mas info<i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue-active">
            <div class="inner">
                <h3>@Model.ProjectCount</h3>
                <p>Proyectos</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="~/Northwind/Projects" class="small-box-footer">Mas info<i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
    <div class="col-lg-3 col-xs-6">
        <!-- small box -->
        <div class="small-box bg-blue-active">
            <div class="inner">
                <h3>@Model.ProjectAproved</h3>
                <p>Proyectos Aprovados</p>
            </div>
            <div class="icon">
                <i class="ion ion-pie-graph"></i>
            </div>
            <a href="~/Northwind/Projects" class="small-box-footer">Mas info<i class="fa fa-arrow-circle-right"></i></a>
        </div>
    </div>
</div>


       

          